<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarioCliente.ReservaDispositivoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/uti_solicitud_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="32dp"
                android:text="Solicitud #"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="288dp"
                android:layout_height="1dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:background="#000000" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="37dp"
                android:text="Dispositivo"
                android:textSize="12sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/ucliente_solicitudes_dispositivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="10dp"
                android:text="latop-samsung"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ucliente_solicitudes_imageView_Dispositivo"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />



            <TextView
                android:textStyle="bold"
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="curso"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ucliente_solicitudes_curso"
                android:layout_width="288dp"
                android:layout_height="40dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="Motivo"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ucliente_solicitudes_motivo"
                android:layout_width="288dp"
                android:layout_height="40dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView11sa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="Cantidad de dÃ­as"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ucliente_solicitudes_dias"
                android:layout_width="288dp"
                android:layout_height="40dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="15dp"
                android:inputType="number" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="dni"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ucliente_solicitudes_imageView_dni"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView11saaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="Programas necesarios"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ucliente_solicitudes_programas"
                android:layout_width="288dp"
                android:layout_height="40dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView11saaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="Otros"
                android:textStyle="bold"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ucliente_solicitudes_otros"
                android:layout_width="288dp"
                android:layout_height="40dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="15dp"
                 />

            <Button
                android:id="@+id/ucliente_solicitudes_btnReservar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="30dp"
                android:text="Reservar Dispositivo" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>