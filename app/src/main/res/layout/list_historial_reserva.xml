<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/id_imagen_histRese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/id_text_tipo_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"

            android:layout_toEndOf="@+id/id_imagen_histRese"
            android:layout_toRightOf="@+id/id_imagen_histRese"
            android:text="Laptop"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_text_estado_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/id_text_tipo_hr"
            android:layout_toRightOf="@+id/id_text_tipo_hr"
            android:text="Pendiente"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_text_curso_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_text_tipo_hr"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/id_imagen_histRese"
            android:layout_toRightOf="@+id/id_imagen_histRese"
            android:text="Curso: teoria telecomunicaciones"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/id_text_fecha_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_text_curso_hr"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/id_imagen_histRese"
            android:layout_toRightOf="@+id/id_imagen_histRese"
            android:text="PrÃ©stamo Max: 12/12/2022"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>