<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".usuarioti.uti_solicitudespendientes">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/uti_solicitud_rechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#920011"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_gravity="end"
        android:layout_marginTop="535dp"
        android:layout_marginEnd="32dp"

        app:srcCompat="@drawable/ic_crosswhite" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/uti_solicitud_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#7D96CC"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_gravity="end"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="32dp"

        app:srcCompat="@drawable/ic_checkwhite" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="#FFFEFE"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/uti_solicitud_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="32dp"
                android:text="Solicitud #"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width=" 288dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="37dp"
                android:text="nombre"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_nombre"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="dni"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/uti_solicitudes_imageView_dni"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="curso"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_curso"
                android:layout_width="288dp"
                android:layout_height="19dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="dispositivo solicitado"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_dispositivo"
                android:layout_width="288dp"
                android:layout_height="19dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/uti_solicitudes_imageView_dispositivo"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_computer" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="motivo"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_motivo"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="tiempo de reserva"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_tiempo"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="programas que necesita tener instalado"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_programas"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:text="detalles adicionales"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uti_solicitudes_detalles"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>