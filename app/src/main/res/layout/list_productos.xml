<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagen_cv_producto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/imagen_ejemplo_dispositivo">

        </ImageView>

        <TextView
            android:id="@+id/id_nombre_dispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Dispositivo"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/id_tipo_dispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombre_dispositivo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="marca Producto"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/id_marca_dispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tipo_dispositivo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Costo Variable"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_stock_dispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_marca_dispositivo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Cantidad"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_btn_reservar_dispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/id_marca_dispositivo"
            android:text="Reservar" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>