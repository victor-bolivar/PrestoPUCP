<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/uti_dispositivo_imagen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen_ejemplo_dispositivo" />

    <TextView
        android:id="@+id/uti_dispositivo_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/box"
        android:padding="8dp"
        android:text="Laptop"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_imagen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uti_dispositivo_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/box"
        android:padding="8dp"
        android:text="Samsung"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_tipo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uti_dispositivo_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/box"
        android:padding="8dp"
        android:text="Stock: 80"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_marca"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="CaractertÃ¬sticas:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_imagen"
        app:layout_constraintTop_toBottomOf="@+id/uti_dispositivo_tipo" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Incluye:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_imagen"
        app:layout_constraintTop_toBottomOf="@+id/uti_dispositivo_caracteristicas" />

    <TextView
        android:id="@+id/uti_dispositivo_caracteristicas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:text="Ta piola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_imagen"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/uti_dispositivo_incluye"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Ta piola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/uti_dispositivo_imagen"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />
</androidx.constraintlayout.widget.ConstraintLayout>